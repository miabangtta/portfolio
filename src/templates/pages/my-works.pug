extends ../template

block variables
    - var title = "Мои работы"

block content
    .wrapper
        include ../common/hero.pug
        svg.triangle.triangle_fill_white.triangle_up(xmlns="http://www.w3.org/2000/svg" viewbox="0 0 1000 85" preserveaspectratio="none")
            polygon(points="0,0   0,86   500,86   500,75.5 1000,0   1000,86   500,86   500,75.5")      
        .section-title.title-works
                .block-title Мои работы                
        section.section.slider
            .slider__info
                .block-subtitle Сайт авиакомпании
                .slider__desc Html, css, javascript
                a.slider__link(href="#")
                    button(type="button").button.slider__link-btn
                        img.slider__link-pic(src="./assets/images/icons/link.svg", alt="link")
                        .slider__link-text Посмотреть сайт
            .slider__display 
                include ../common/slider.pug
            .slider__btns 
                a.slider__btn.slider__btn_down
                    img(src="", alt="").slider__img
                    img(src="./assets/images/icons/arrow_down.svg").slider__arrow.slider__arrow_next
                a.slider__btn.slider__btn_up
                    img(src="", alt="").slider__img
                    img(src="./assets/images/icons/arrow_down.svg").slider__arrow.slider__arrow_prev
        .section-title.title-reviews
            .block-title Что обо мне говорят
        section.reviews            
            .container
                ul.reviews__list
                    li.reviews__item
                        .reviews__icon
                            img.reviews__icon-pic(src="./assets/images/content/dima.jpg", alt="Дмитрий")
                        .reviews__content Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
                        .reviews__author Ковальчук Дмитрий
                        .reviews__occ основатель Loftschool
                    li.reviews__item
                        .reviews__icon
                            img.reviews__icon-pic(src="./assets/images/content/vova.jpg", alt="Владимир")
                        .reviews__content Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
                        .reviews__author Сабанцев Владимир
                        .reviews__occ преподаватель
            .message
                form(action="form" method="post")
                    .message__form
                        .block-subtitle Связаться со мной
                        input.message__name(placeholder="Имя")
                        input.message__email(placeholder="Email")
                        textarea.message__content(placeholder="Ваше сообщение")
                        .message__buttons
                            button(type="submit").button Отправить
                            button(type="reset").button Очистить                  
    include ../common/footer.pug